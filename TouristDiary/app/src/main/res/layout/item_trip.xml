<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cv_item_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_item_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_trip_short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="casual"
                android:gravity="start"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/iv_trip_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Name of trip, date: 22 Sep 2018" />

            <ImageView
                android:id="@+id/iv_trip_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"

                android:contentDescription="@string/im_trip_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_trip_short_description"
                app:srcCompat="@drawable/ic_test_trip_background" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>